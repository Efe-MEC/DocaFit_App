<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/linearLayoutCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewBolgeSecimi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_spinner_label"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"/>

        <Spinner
            android:id="@+id/spinnerBolge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:minHeight="48dp"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/buttonOner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suggestion_button_label"
            android:textColor="@color/button_text"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:id="@+id/textViewEgzersiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Önerilen egzersiz burada görünecek"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>