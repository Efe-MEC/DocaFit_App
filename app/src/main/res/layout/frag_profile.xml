<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_marginTop="115dp"
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="@string/profile_picture_desc"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="@string/user_label"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/currentThemeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_label"
            android:textSize="18sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/themeToggleButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/change_button"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/currentlanguageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_label"
            android:textSize="18sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/languageToggleButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/change_button"
            android:textColor="@color/button_text" />
    </LinearLayout>

</LinearLayout>
